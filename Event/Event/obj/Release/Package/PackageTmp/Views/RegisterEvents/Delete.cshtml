@model Event.Models.RegisterEvent

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn có chắc chắn muốn xóa bản ghi này không?</h3>
<div>
    <h4>Xóa người đăng kí dự thưởng</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Mã vòng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoundNumber)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions">
        <input type="submit" value="Xóa" class="btn btn-default btn-danger" />
        <a class="btn btn-default btn-warning" href="~/RegisterEvents/Index">Quay lại</a>
    </div>
    }
</div>
