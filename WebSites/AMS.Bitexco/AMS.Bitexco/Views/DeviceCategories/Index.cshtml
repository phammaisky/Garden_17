@model IEnumerable<AMS.Models.DeviceCategory>

@{
    ViewBag.Title = "Danh mục thiết bị";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <h2 class="col-md-9">Danh mục thiết bị</h2>
        <div class="col-md-3" id="progresBarLoadingData" style="padding-top:5px; display:none">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                @Html.Raw("Đang xử lý dữ liệu! ")
            </div>
        </div>
    </div>
</div>

<div class="toolBar  form-inline" id="toolBar">
    <a class="btn btn-primary btn-sm create_modal" href="@Url.Action("Create", "DeviceCategories")">
        <span class="glyphicon glyphicon-plus"></span> Thêm mới
    </a>
    &nbsp;
</div>

<div id="grid-list" class="table-responsive">
    @{ Html.RenderPartial("_DeviceCategories", (AMS.Models.Pagging<AMS.Models.DeviceCategory>)ViewBag.PaggingDeviceCat); }
</div>

<div id='CRUDDialog' class='modal fade in'>
    <div id='CRUDDialogContent'></div>
</div>

