@model IEnumerable<AMS.Models.HistoryUse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeviceAndTool.AssetsCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.ShortName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff.SysName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HandedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusDescrition)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceAndTool.AssetsCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff.SysName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HandedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusDescrition)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
