

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" onclick="$('#CRUDDialog').modal('hide');"><span aria-hidden="true">&times;</span><span class="sr-only">Đóng</span></button>
            <h4 class="modal-title" id="myModalLabel">Upload dữ liệu kiểm kê</h4>
        </div>

        @using (Html.BeginForm("UpdateCheck", "Report", new { id = "CreateDialog" }, FormMethod.Post
            , new { enctype = "multipart/form-data" }))
        {   
            <div class="modal-body" style="min-height:150px; max-height:350px; ">
                @Html.ValidationSummary()               
                <div class="text-center form-inline">
                    <input type="file" id="fileToUpload" class="form-control input-sm" name="fileUpload" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-upload fa-lg"></i> Upload file dữ liệu đã kiểm kê
                </button>
                <button type="button" onclick="$('#CRUDDialog').modal('hide');" class="btn btn-default" aria-hidden="true"><span class="glyphicon glyphicon-arrow-left"></span> Hủy</button>
            </div>
        }
    </div>
</div>