@using AMS.Models
@model IEnumerable<AMS.Models.Location>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh mục địa điểm, phòng ban</h2>

<div class="toolBar form-inline">
    <a href="@Url.Action("Create","Locations")" class="btn btn-primary btn-sm create_modal "><i class="fa fa-plus"></i> Thêm địa điểm</a>   
</div>    

<div id="grid-list" class="table-responsive">
    @{ Html.RenderPartial("_LocationList", Model); }
</div>

<div style="display:none" id="contentProccessing">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Đóng</span></button>
                <h4 class="modal-title" id="myModalLabel">Thông báo</h4>
            </div>
            <div class="modal-body" style="min-height:200px;">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    @Html.Raw("Đang xử lý dữ liệu! ")
                </div>
            </div>
        </div>
    </div>
</div>

<div id='CRUDDialog' class='modal fade in'>
    <div id='CRUDDialogContent'></div>
</div>