@using AMS.Models
@model AMS.Models.Department

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" onclick="$('#CRUDSubDialog').modal('hide');"><span aria-hidden="true">&times;</span><span class="sr-only">Đóng</span></button>
            <h4 class="modal-title" id="myModalLabel">Tạo mới<small> Phòng, ban</small></h4>
        </div>

        @using (Html.BeginForm("Create", "Departments", FormMethod.Post, new { id = "CreateDialog" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body" style="min-height:250px; max-height:450px; ">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyId, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-sm-9">
                            <div class="btn-group" id="GroupDropdownCompany">
                                <button type="button" id="btnDropdownCompany" style="width:350px; text-align:left" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    @if (ViewBag.Company != null)
                                    {
                                        @Html.Raw(((Company)ViewBag.Company).NameVn)<i class="fa fa-caret-down pull-right" style="padding-top: 3px;"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-caret-down pull-right" style="padding-top: 3px;"></i>
                                    }
                                </button>
                                @if (ViewBag.Company != null)
                                {<input type="hidden" name="CompanyId" id="ParentId" value="@(((Company)ViewBag.Company).Id)" /> }
                                else
                                {<input type="hidden" name="CompanyId" id="ParentId" /> }

                                <div class="dropdown-menu" role="menu" style="max-height:250px; overflow:auto; padding-left:5px; padding-right:5px; width:400px">
                                    @{Html.RenderAction("CompanySelector", "Companies");}
                                </div>
                                <script type="text/javascript">
                                    $('.dropdown-menu input, .dropdown-menu table, .dropdown-menu i').click(function (e) {
                                        e.stopPropagation();
                                    });
                                </script>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DeptCode, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.DeptCode, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.DeptCode, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DeptName, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.DeptName, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.DeptName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DeptDesc, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.DeptDesc, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.DeptDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DeptOrder, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.DeptOrder, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.DeptOrder, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Lưu
                </button>
                <button type="button" onclick="$('#CRUDSubDialog').modal('hide');" class="btn btn-default" aria-hidden="true"><span class="glyphicon glyphicon-arrow-left"></span> Hủy</button>
            </div>
        }
    </div>
</div>
