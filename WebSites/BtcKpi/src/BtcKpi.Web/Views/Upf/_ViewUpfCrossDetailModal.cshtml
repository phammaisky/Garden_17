@model BtcKpi.Web.ViewModels.IpfViewModel
<div class="modal fade" id="view-detail-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Xem mục tiêu</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="box-body">
                        <input type="hidden" id="hdIpfDetailID"/>
                        <div class="form-group">
                            <label for="v_completeWorkType">Tính chất công việc/Complete Work Title</label>
                            @Html.DropDownList("v_completeWorkType", Model.CompleteWorkTitles, "--- Chọn ---", new { @class = "form-control", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label for="v_objective">Mục tiêu / Objective</label>
                            <textarea type="text" id="v_objective" class="form-control " disabled="disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="v_target">Chỉ tiêu kế hoạch/yêu cầu cụ thể / Targets / specific requirements must be achieved</label>
                            <textarea type="text" id="v_target" class="form-control " disabled="disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="v_weight">Tỷ trọng / Weight(%)</label>
                            <input type="number" id="v_weight" min="0" max="100" step="1" class="form-control " disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="v_result">Kết quả thực hiện / Performance results</label>
                            <textarea type="text" id="v_result" class="form-control " disabled="disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="v_self-score">NV tự đánh giá / Self assessment</label>
                            <input type="text" id="v_self-score" min="0" max="5" step="0.1" class="form-control " disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="v_manager-score">Quản lý đánh giá / Manager's assessment</label>
                            <input type="text" id="v_manager-score" min="0" max="5" step="0.1" class="form-control " disabled="disabled" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Hủy</button>*@
                <button type="button" class="btn btn-primary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>