@model BtcKpi.Web.ViewModels.ReportListViewModel
<div class="modal fade" id="add-bod-approved-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title text-center">BOD đánh giá</h3>
            </div>
            <div class="modal-body">
                <div id="modalError" class="alert alert-block alert-danger modalError" style="display:none">
                    <h4>Lỗi !</h4>
                    Vui lòng nhập đủ dữ liệu !
                </div>
                <form role="form">
                    <div class="box-body">
                        <input type="hidden" id="upfId" />
                        <div class="form-group">
                            <label for="averagePoint">Điểm KPI BQ</label>
                            <input type="text" id="averagePoint" class="form-control" disabled="disabled"/>
                        </div>
                        <div class="form-group">
                            <label for="sumBODPoint">Điểm BOD đánh giá</label>
                            <input type="number" id="sumBODPoint" placeholder="1.0" step="0.1" min="0" max="5" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="note">Ghi chú</label>
                            <textarea type="text" id="note" class="form-control"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" title="Hủy">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnAddUpfSum" title="Lưu">Lưu</button>
                <button type="button" class="btn btn-primary" id="btnUpdateUpfSum" title="Cập nhật">Cập nhật</button>
            </div>
        </div>
    </div>
</div>