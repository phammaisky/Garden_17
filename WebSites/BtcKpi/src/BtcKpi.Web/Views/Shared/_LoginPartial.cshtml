@using BtcKpi.Web.Extensions
<li class="dropdown user user-menu">
    @if (Request.IsAuthenticated)
    {
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="~/Admin/dist/img/user.svg" class="user-image" alt="User Image">
            <span class="hidden-xs"></span>
        </a>
        <ul class="dropdown-menu">
            <li class="user-header">
                <img src="~/Admin/dist/img/user.svg" class="img-circle" alt="User Image">
                <p>
                    <small>@if (HttpContext.Current.User.Identity.IsAuthenticated)
                           {
                               var identity = ((CustomPrincipal)HttpContext.Current.User);
                               @identity.FullName
                           }</small>
                </p>
            </li>
