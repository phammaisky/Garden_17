@model BtcKpi.Web.ViewModels.IpfViewModel
<div class="modal fade" id="add-personal-plan-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Thêm mới kế hoạch phát triển cá nhân</h4>
            </div>
            <div class="modal-body">
                <div id="modalError_pp" class="alert alert-block alert-danger modalError" style="display:none">
                    <h4>Lỗi !</h4>
                    Vui lòng nhập đủ dữ liệu !
                </div>
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="activity">Các hoạt động : </label>
                            <textarea type="text" id="activity" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="complete-date">Ngày hoàn tất : </label>
                            <input type="text" id="complete-date" class="form-control complete-date text-right" />
                        </div>
                        <div class="form-group">
                            <label for="remark">Ghi chú : </label>
                            <textarea type="text" id="remark" class="form-control"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn pull-left" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnAddPersonalPlanModal">Lưu</button>
            </div>
        </div>
    </div>
</div>