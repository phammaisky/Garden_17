@model BtcKpi.Web.ViewModels.IpfViewModel
<div class="modal fade" id="delete-detail-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Xóa mục tiêu</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="box-body">
                        <input type="hidden" id="d_hdIpfDetailID"/>
                        <input type="hidden" id="d_hdIpfDetailSeq" />
                        <div class="form-group">
                            <label for="d_completeWorkType">Tính chất công việc/Complete Work Title</label>
                            @Html.DropDownList("d_completeWorkType", Model.CompleteWorkTitles, "--- Chọn ---", new { @class = "form-control", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label for="d_objective">Mục tiêu / Objective</label>
                            <textarea type="text" id="d_objective" class="form-control " disabled = "disabled" ></textarea>
                        </div>
                        <div class="form-group">
                            <label for="d_target">Chỉ tiêu kế hoạch/yêu cầu cụ thể / Targets / specific requirements must be achieved</label>
                            <textarea type="text" id="d_target" class="form-control " disabled = "disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="d_weight">Tỷ trọng / Weight(%)</label>
                            <input type="number" id="d_weight" min="0" max="100" step="1" class="form-control " disabled = "disabled" />
                        </div>
                        <div class="form-group">
                            <label for="d_result">Kết quả thực hiện / Performance results</label>
                            <textarea type="text" id="d_result" class="form-control " disabled = "disabled"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="d_self-score">NV tự đánh giá / Self assessment</label>
                            <input type="text" id="d_self-score" min="0" max="5" step="0.1" class="form-control " disabled = "disabled" />
                        </div>
                        <div class="form-group">
                            <label for="d_manager-score">Quản lý đánh giá / Manager's assessment</label>
                            <input type="text" id="d_manager-score" min="0" max="5" step="0.1" class="form-control " disabled = "disabled" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn pull-left" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="btnDeleteDetailModal">Xóa</button>
            </div>
        </div>
    </div>
</div>