
@{
    ViewBag.Title = "Bitexco Kpis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu {
    @Scripts.Render("~/Scripts/Home/DashboardV1/menu")
}
@Styles.Render("~/BitexcoThemes/plugins/morris/css")
@Styles.Render("~/BitexcoThemes/plugins/jvectormap/css")
@Styles.Render("~/BitexcoThemes/plugins/datepicker/css")
@Styles.Render("~/BitexcoThemes/plugins/daterangepicker/css")
@Styles.Render("~/BitexcoThemes/plugins/bootstrap-wysihtml5/css")
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>150</h3>
                <p>Loại A</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            @*<a href="#" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-green">
            <div class="inner">
                <h3>
                    53<sup style="font-size: 20px">%</sup>
                </h3>
                <p>Loại B</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            @*<a href="#" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>44</h3>
                <p>Loại C</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            @*<a href="#" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-red">
            <div class="inner">
                <h3>0</h3>
                <p>Loại D</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            @*<a href="#" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">KPIs cá nhân 2020</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body chart-responsive">
                <div class="chart" id="bar-chart" style="height: 300px;"></div>
            </div>
        </div>
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Xếp loại IPF năm</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body chart-responsive">
                <div class="chart" id="sales-chart" style="height: 300px; position: relative;"></div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-info hidden">
            <div class="box-header with-border">
                <h3 class="box-title">UPF Cross</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body chart-responsive">
                <div class="chart" id="line-chart" style="height: 300px;"></div>
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">UPF Cross 2020</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body chart-responsive">
                <div class="chart" id="revenue-chart" style="height: 300px;"></div>
            </div>
        </div>

        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Xếp loại UPF Cross năm 2020</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body chart-responsive">
                <div class="chart" id="upf-chart" style="height: 300px; position: relative;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/BitexcoThemes/plugins/jquery-ui/js")
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
    @Scripts.Render("~/BitexcoThemes/plugins/bootstrap-wysihtml5/js")
    @Scripts.Render("~/BitexcoThemes/plugins/sparkline/js")
    @Scripts.Render("~/BitexcoThemes/plugins/jvectormap/js")
    @Scripts.Render("~/BitexcoThemes/plugins/daterangepicker/js")
    @Scripts.Render("~/BitexcoThemes/plugins/knob/js")
    @Scripts.Render("~/BitexcoThemes/plugins/raphael/js")
    @Scripts.Render("~/BitexcoThemes/plugins/morris/js")
    @*@Scripts.Render("~/Scripts/Charts/Morris")*@
    @Scripts.Render("~/BitexcoThemes/plugins/datepicker/js")
    @Scripts.Render("~/Scripts/Home/DashboardV1")
    @Scripts.Render("~/Scripts/Home/Index")
}