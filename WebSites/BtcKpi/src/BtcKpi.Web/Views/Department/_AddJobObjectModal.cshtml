@model BtcKpi.Web.ViewModels.DepartmentViewModel
<div class="modal fade" id="add-job-detail-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title text-center">Thêm mới KPIs mục tiêu</h3>
            </div>
            <div class="modal-body">
                <div id="modalErrorDetail" class="alert alert-block alert-danger modalError" style="display:none">
                    <h4>Lỗi !</h4>
                    Vui lòng nhập đủ dữ liệu !
                </div>
                <form role="form">
                    <div
                        class="box-body">
                        <input type="hidden" id="nameDetailID"/>
                        <input type="hidden" id="upfJobObjOrderID"/>
                        <input type="hidden" id="jobObjOrderID"/>
                        <input type="hidden" id="upfNameDetailID" />
                        @*<div class="form-group">
                            <label for="nameKPIView">Tên nhóm công việc</label>
                            <input type="text" id="nameKPIView" class="form-control" disabled="true"/>
                        </div>*@
                        <div class="form-group">
                            <label for="completeWorkType">Tính chất công việc/Complete Work Title</label>
                            @Html.DropDownList("completeWorkType", Model.CompleteWorkTitles, "--- Chọn ---", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label class="text-left" for="jobName">Tên KPIs mục tiêu</label>
                            <textarea type="text" id="jobName" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="scheduledTime">Thời gian dự kiến</label>
                            <input type="text" placeholder="dd/MM/yyyy" id="scheduledTime" class="form-control complete-date text-right"/>
                        </div>
                        <div class="form-group">
                            <label for="numberPlan">Số kế hoạch/ Yêu cầu cụ thể</label>
                            <textarea rows="1" type="text" id="numberPlan" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="performResults">Kết quả thực hiện</label>
                            <textarea rows="1" type="text" id="performResults" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="weight">Tỷ trọng (%)</label>
                            <input type="number" id="weight" min="0" max="100" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="point">Điểm</label>
                            <input type="number" id="point" placeholder="1.0" step="0.1" min="0" max="5" class="form-control"/>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" title="Hủy">Hủy</button>
                <button type="button" class="btn btn-primary" id="btnAddJobDetailModal" title="Lưu">Lưu</button>
                <button type="button" class="btn btn-primary" id="btnUpdateJobDetailModal" title="Cập nhật">Cập nhật</button>
            </div>
        </div>
    </div>
</div>